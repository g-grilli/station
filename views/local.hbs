   <script>
   function chartData() {
    var ctx = document.getElementById("piWeather").getContext('2d');
    var piWeather = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Temp-H °F', 'Temp-P °F', 'Humidity %', 'Press inHG'],
        datasets: [{
            label: 'Weather Sation Readings',
            {{#each results}}
            data: [{{temp_h}}, {{temp_p}}, {{humidity}},{{pressure}}] ,
            {{/each}}
            backgroundColor:
                'rgba(248, 248, 248, 1)',
            borderColor:
                'rgba(211,25,25,1)',
            borderWidth: 3
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
      }
    });
   }

   </script>
