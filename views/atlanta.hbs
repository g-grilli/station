    <script>
      function  lookup () {
        var outlook = document.getElementById('outlook').value;
        var skycons = new Skycons();
        axios.get('/outlook', {params: {outlook: outlook}})
       .then(function (response) {
         console.log(response.data);
         var tL = document.getElementById('tempL');
         tL.innerHTML = round(response.data.ds.daily.data[0].temperatureMin, 1);
         var tH = document.getElementById('tempH');
         tH.innerHTML = round(response.data.ds.daily.data[0].temperatureMax, 1);
         var s = document.getElementById('summary');
         s.innerHTML = response.data.ds.daily.summary;
         var r = document.getElementById('chncRain');
         r.innerHTML = round(response.data.ds.daily.data[0].precipProbability * 100, 1);
         var h = document.getElementById('humid');
         h.innerHTML = round(response.data.ds.daily.data[0].humidity * 100, 1);
         var d = document.getElementById('dew');
         d.innerHTML = round(response.data.ds.daily.data[0].dewPoint, 1);
         var u = document.getElementById('sunUp');
         u.innerHTML = convertTime(response.data.ds.daily.data[0].sunriseTime);
         var sD = document.getElementById('sunDown');
         sD.innerHTML = convertTime(response.data.ds.daily.data[0].sunsetTime);
         var l = document.getElementById('location');
         l.innerHTML = response.data.db.location_text;
         skycons.set("icon", response.data.ds.daily.icon);
         skycons.play();
         console.log(response.data.ds);
       });
        return false;
      }
    </script>
    <script>
     function round(value, precision) {
      var multiplier = Math.pow(10, precision || 0);
      return Math.round(value * multiplier) / multiplier;
      }
    </script>
    <script>
      function convertTime(timestamp) {
        var d = new Date(timestamp * 1000),
		      yyyy = d.getFullYear(),
		      mm = ('0' + (d.getMonth() + 1)).slice(-2),	
		      dd = ('0' + d.getDate()).slice(-2),
		      hh = d.getHours(),
		      h = hh,
		      min = ('0' + d.getMinutes()).slice(-2),
		      ampm = 'AM',
		      time;
	      if (hh > 12) {
		      h = hh - 12;
		      ampm = 'PM';
	      } else if (hh === 12) {
		      h = 12;
		      ampm = 'PM';
	      } else if (hh == 0) {
		    h = 12;
	      }
	      time = mm + '-' + dd + '-' + yyyy + ', ' + h + ':' + min + ' ' + ampm;
	      return time;
      }
